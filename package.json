{
  "name": "ghost-monorepo",
  "version": "0.0.0-semantically-released",
  "private": true,
  "repository": "https://github.com/TryGhost/Ghost",
  "author": "Ghost Foundation",
  "license": "MIT",
  "workspaces": [
    "ghost/*"
  ],
  "eslintIgnore": [
    "**/node_modules/**"
  ],
  "scripts": {
    "dev": "yarn workspace ghost run dev",
    "lint": "yarn workspaces run lint",
    "start": "yarn workspace ghost run start"
  },
  "resolutions": {
    "@tryghost/logging": "2.2.3",
    "moment": "2.24.0",
    "moment-timezone": "0.5.23"
  },
  "renovate": {
    "extends": [
      "@tryghost:quietJS",
      "@tryghost:disableTryGhostAutomerge",
      "@tryghost:groupTestLint",
      "@tryghost:groupCSS",
      "@tryghost:groupBuildTools"
    ],
    "ignoreDeps": [
      "got",
      "intl-messageformat",
      "moment",
      "moment-timezone",
      "oembed-parser",
      "simple-dom"
    ],
    "ignorePaths": [
      "test"
    ],
    "packageRules": [
      {
        "packagePatterns": [
          "metascraper"
        ],
        "groupName": "metascraper"
      }
    ]
  },
  "release": {
    "extends": "semantic-release-monorepo",
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "monorepo",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "dryRun": true,
    "plugins": [
      [
        "semantic-release-gitmoji",
        {
          "releaseRules": {
            "major": [
              ":boom:"
            ],
            "minor": [
              ":sparkles:"
            ],
            "patch": [
              ":bug:",
              ":lock:"
            ]
          }
        }
      ],
      "@semantic-release/commit-analyzer"
    ]
  },
  "devDependencies": {
    "multi-semantic-release": "2.13.0",
    "semantic-release-gitmoji": "1.4.4",
    "semantic-release-monorepo": "7.0.5"
  }
}
